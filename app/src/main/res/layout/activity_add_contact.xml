<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lou.magistrale.quicksms.AddContact">

    <TextView
        android:id="@id/hello_world_add_contact"
        android:text="@string/text_hello_world_add_contact"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@id/new_name"
        android:hint="@string/insert_new_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hello_world_add_contact"/>

    <EditText
        android:id="@id/new_number"
        android:hint="@string/insert_new_number"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/new_name"
        android:inputType="number"/>

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@id/android:list"
        android:layout_below="@id/new_number"
        android:layout_above="@id/confirm_insert"
        android:background="@android:color/transparent"/>

    <Button
        android:id="@id/confirm_insert"
        android:text="@string/button_confirm_insert"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
